  <!-- Ícone do menu mobile -->
  <div class="menu-icon">
    <i class="bx bx-menu" id="menu-icon"></i>
  </div>

  <!-- Navbar principal -->
  <nav class="navbar">
    <!-- Dropdown Crachá -->
