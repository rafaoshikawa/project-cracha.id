    <!-- Dropdown Cordões -->
    <div class="dropdown">
      <a href="/cordoes">Cordões <i class="bx bx-chevron-down"></i></a>
      <div class="dropdown-menu">
        <a href="/cordoes#para-cracha">Cordões para crachá</a>
        <a href="/cordoes#para-medalha">Cordões para medalha</a>
