        <a href="/brindes#canetas">Canetas</a>
        <a href="/brindes#copos">Copos personalizados</a>
      </div>
    </div>

    <!-- Botão de orçamento -->
    <div class="btn-1">
      <a
        href="/orcamento"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-1"
        style="color: #fff; font-weight: 400"
      >
        Fazer Orçamento
      </a>
    </div>
  </nav>

  <!-- Background do menu mobile -->
  <div class="nav-bg"></div>

  <!-- Script do menu mobile -->
  <script type="module" src="/js/script.js"></script>
